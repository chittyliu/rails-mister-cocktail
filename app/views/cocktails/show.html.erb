<h1><%= @cocktail.name %></h1>
<li>Ingredient:
  <% @cocktail.doses.each do |dose| %>
    <p><%= dose.ingredient.name %> - <%= dose.description %></p>
    <p><%= link_to "Delete Dose", cocktail_dose_path(@cocktail, dose), method: :delete, data: { confirm: "Are you sure?" } %></p>
  <% end %>
</li>

<p><%= link_to "Add Dose", new_cocktail_dose_path(@cocktail) %></p>
<p><%= link_to "Cocktails List", cocktails_path %></p>


